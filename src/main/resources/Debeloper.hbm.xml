<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="study.hibernate.Developer" table="hibernate_developers" schema="simplenn_test">
        <id name="id">
            <column name="ID" sql-type="int(11)"/>
        </id>
        <property name="firstName">
            <column name="FIRST_NAME" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="LAST_NAME" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="specialty">
            <column name="SPECIALITY" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="experience">
            <column name="EXPERIENCE" sql-type="int(11)" not-null="true"/>
        </property>
<!--        <property name="company">-->
<!--            <column name="company" sql-type="int(11)" not-null="true"/>-->
<!--        </property>-->
    </class>
</hibernate-mapping>