<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="study.hibernate.data.EmploysEntity" table="employs" schema="simplenn_test">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(13)" length="13" not-null="true"/>
        </property>
        <property name="img">
            <column name="img" sql-type="blob" not-null="true"/>
        </property>
        <property name="dt">
            <column name="dt" sql-type="date" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>